 {
  configuracion_visual: {
    reglas: {
      css_ligero_sin_frameworks: true,
      mobile_first_extremo: true,
      fcp_max_segundos: 1.5
    },
    tema_principal: {
      nombre: Contraste Dinamico,
      modo_oscuro_por_defecto: true,
      colores_acento_permitidos: [
        purple,
        neon,
        cyan
      ],
      usar_acento_en: [
        botones,
        palabras_clave_h1,
        elementos_destacados
      ]
    },
    estilo_visual: {
      tipo: Glassmorphism,
      permitido: [
        paneles_translucidos,
        micro_ui_abstracto,
        product_mockups
      ],
      prohibido: [
        fotos_stock_genericas_personas
      ]
    },
    tipografia_lectura: {
      prioridad: alta_legibilidad_movil,
      h1: {
        permitir_gradiente_palabras_clave: true,
        max_palabras_con_gradiente: 2
      }
    },
    bordes_sombras: {
      radio_borde_min_px: 12,
      radio_borde_max_px: 24,
      sombras: suaves_elegantes_sutiles
    },
    iconografia: {
      estilo: limpia_coherente_funcional
    },
    interacciones_animaciones: {
      solo_css: true,
      ejemplos_permitidos: [
        fade-in-up,
        scale-in,
        hover-glow
      ],
      prohibido_js_pesado: true
    },
    ux_ui_movil: {
      touch_target_min_altura_px: 48,
      zero_friction: true,
      permitido: [
        smooth_scroll,
        modal_instantaneo
      ],
      prohibido: [
        recargas_pagina,
        navegacion_lenta
      ]
    }
  }
},

